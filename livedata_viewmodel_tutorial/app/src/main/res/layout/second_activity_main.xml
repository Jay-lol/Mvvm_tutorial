<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingHorizontal="10dp"
>
    <!--        tools:context=".SecondMainActivity"-->
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/number_textView"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinput_edittext"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/plus_btn"
            android:layout_marginTop="3dp" app:layout_constraintTop_toBottomOf="@+id/number_textView"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더하기"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/plus_btn"
            app:layout_constraintStart_toEndOf="@+id/userinput_edittext" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/minus_btn"
            app:layout_constraintTop_toTopOf="@+id/userinput_edittext"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빼기"
            android:id="@+id/minus_btn"
            app:layout_constraintStart_toEndOf="@+id/plus_btn" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/userinput_edittext"/>

</androidx.constraintlayout.widget.ConstraintLayout>